<% include header.ejs %>
<% if (client) { %>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="prenom">Prenom</label>
            <input type="text" class="form-control" name="prenom" id="prenom" value="<%= client.prenom %>" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" name="nom" id="nom" value="<%= client.nomClient %>" required>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="username">Adresse</label>
            <input type="text" class="form-control" name="adresse" id="adresse" value="<%= client.adresse %>" >
        </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
          <label for="ville">Ville</label>
          <input type="text" class="form-control" name="ville" id="ville" <% if (client.clientIdVille) { %> value="<%= client.nomVille %>" <% } else { %> value="" <% } %>>
      </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="civilite">civilité</label>
            <select id="civilite" name="civilite" class="form-control" required>
                <option selected><%= client.civilite %></option>
                <option>M</option>
                <option>F</option>
            </select>
        </div>
    </div>
    <input type="button" data-url="/client/<%= client.id_client %>" data-html=""  data-type="put"  class="btn btn-sm btn-success" value="Update">
    <div class="table-wrapper">
        <%  if (commandes.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">NuméroCommande</th>
                        <th scope="col">Date commande</th>
                    </tr>
                </thead>
                <tbody>
                    <% commandes.forEach((commande, index) => { %>
                        <tr>
                            <th scope="row"><%= commande.numero %></th>
                            <td><%= commande.date_commande %></td>
                            <td>
                                <input type="button" data-url="/commande/<%= commande.id_commande %>" data-html="commande"  data-type="get" class="btn btn-sm btn-success" value="Voire">
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>     
<% } %>